{{!
    @template local_coursecompletionrestore/restore-snapshot

    This template renders the main content area for the dashboard block.

    Example context (json):
    {}
}}
<div class="snapshots-list">
    <h2>{{title}}</h2>
    <div class="details-block">
        {{#snapshot}}
            <div id="row">
                {{course}}
            </div>
            <div id="row">
                {{notes}}
            </div>
            <div id="row">
                {{uses}}
            </div>
            <div id="row">
                {{datecreated}}
            </div>
            <div id="row">
                {{completions}}
            </div>
        {{/snapshot}}
    </div>
    <div class="completions-block">
        <tr>
            <thead>{{# str }} firstname, local_coursecompletionrestore {{/ str }}</thead>
            <thead>{{# str }} lastname, local_coursecompletionrestore {{/ str }}</thead>
            <thead>{{# str }} timecompleted, local_coursecompletionrestore {{/ str }}</thead>
        </tr>
        {{#completions}}
            <tr>
                <td>{{firstname}}</td>
                <td>{{lastname}}</td>
                <td>{{timecompleted}}</td>
            </tr>
        {{/completions}}
    </div>
    <div id="row">
        <a href="{{button_link}}" class = "ecommerce-menu-bar-item">{{# str }} restore, local_coursecompletionrestore {{/ str }}</a>
    </div>
</div>