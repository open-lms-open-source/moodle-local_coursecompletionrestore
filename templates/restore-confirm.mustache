{{!
    @template local_coursecompletionrestore/restore-snapshot

    This template renders the main content area for the dashboard block.

    Example context (json):
    {}
}}
<div class="snapshots-list">
    <h2>{{title}}</h2>
    <div class="details-block">
        {{#snapshot}}
            <div id="row">
                <label class="col-lg-2 control-label">{{# str }} course, local_coursecompletionrestore {{/ str }}:</label>
                {{course}}
            </div>
            <div id="row">
                <label class="col-lg-2 control-label">{{# str }} notes, local_coursecompletionrestore {{/ str }}:</label>
                {{notes}}
            </div>
            <div id="row">
                <label class="col-lg-2 control-label">{{# str }} timecreated, local_coursecompletionrestore {{/ str }}:</label>
                {{datecreated}}
            </div>
            <div id="row">
                <label class="col-lg-2 control-label">{{# str }} completions, local_coursecompletionrestore {{/ str }}:</label>
                {{completions}}
            </div>
        {{/snapshot}}
    </div>
    <div id="row">
        <a href="{{confirm_link}}" class = "ecommerce-menu-bar-item">{{# str }} confirm, local_coursecompletionrestore {{/ str }}</a>
        <a href="{{cancel_link}}" class = "ecommerce-menu-bar-item">{{# str }} cancel, local_coursecompletionrestore {{/ str }}</a>
    </div>
</div>