{{!
    @template local_coursecompletionrestore/restore-snapshot

    This template renders the main content area for the dashboard block.

    Example context (json):
    {}
}}
<div class="snapshots-list">
    <h2>{{title}}</h2>
    <table class="results">
        {{#snapshot}}
        <tr>
            <td>{{# str }} course, local_coursecompletionrestore {{/ str }}:</td>
            <td>{{course}}</td>
        </tr>
        <tr>
            <td>{{# str }} notes, local_coursecompletionrestore {{/ str }}:</td>
            <td>{{notes}}</td>
        </tr>
        <tr>
            <td>{{# str }} timecreated, local_coursecompletionrestore {{/ str }}:</td>
            <td>{{datecreated}}</td>
        </tr>
        <tr>
            <td>{{# str }} completions, local_coursecompletionrestore {{/ str }}:</td>
            <td>{{completions}}</td>
        </tr>
        <tr>
            <td colspan="2" class="centered_cell">
                <a href="{{confirm_link}}" class = "ecommerce-menu-bar-item"><button type="button" class="btn btn-primary">{{# str }} confirm, local_coursecompletionrestore {{/ str }}</button></a>
                <a href="{{cancel_link}}" class = "ecommerce-menu-bar-item"><button type="button" class="btn btn-primary">{{# str }} cancel, local_coursecompletionrestore {{/ str }}</button></a>
            </td>
        </tr>
        {{/snapshot}}
    </table>
</div>